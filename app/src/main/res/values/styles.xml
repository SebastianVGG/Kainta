<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.Kainta">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="BottomNavigation">

        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/primaryDarkColor</item>
        <item name="itemTextColor">@color/primaryTextColor</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@color/primaryColor</item>
        <item name="titleTextAppearance">@color/primaryTextColor</item>
        <item name="subtitleTextAppearance">@color/primaryTextColor</item>
    </style>

    <style name="Theme.Kainta.NoActionBar_Login" parent="Theme.Kainta">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="EditTextTheme" parent="Theme.Kainta">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/secondaryColor</item>
    </style>


</resources>