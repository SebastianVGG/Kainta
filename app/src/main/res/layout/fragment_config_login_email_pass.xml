<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.perfil.login.ConfigLoginEmailPassFragment">

    <LinearLayout
        android:id="@+id/layoutCorreo"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Nuevo Correo"
            android:textColor="@color/secondaryTextColor"
            android:textSize="24dp" />


        <EditText
            android:id="@+id/editCorreoActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edit"
            android:elevation="3dp"
            android:hint="Correo actual"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/editPassActual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edit"
            android:elevation="3dp"
            android:hint="Coloque su contrase単a"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/editCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edit"
            android:elevation="3dp"
            android:hint="Nuevo correo"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/btnCorreo"
            android:text="Aceptar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPass"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="Nueva contrase単a"
            android:textColor="@color/secondaryTextColor"
            android:textSize="24dp" />


        <EditText
            android:id="@+id/editCorreoActualPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edit"
            android:elevation="3dp"
            android:hint="Correo actual"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            />


        <EditText
            android:id="@+id/editPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edit"
            android:elevation="3dp"
            android:hint="Contrase単a actual"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            />

        <EditText
            android:id="@+id/editNuevaPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edit"
            android:elevation="3dp"
            android:hint="Nueva contrase単a"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"
            />

        <Button
            android:id="@+id/btnPass"
            android:text="Aceptar"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>




</LinearLayout>